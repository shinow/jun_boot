<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://www.springframework.org/schema/beans"
	xsi:schemaLocation="http://www.springframework.org/schema/beans   http://www.springframework.org/schema/beans/spring-beans.xsd"
	default-autowire="byName">

	<!-- Service Layer Transaction Template -->


	<bean name="operateTemplate"
		class="org.smartboot.service.util.OperationTransactionTemplate" />

	<import resource="classpath*:service-api-handler.xml" />
	<import resource="classpath*:service-rpc.xml" />
	<import resource="classpath*:component-config.xml" />
</beans>